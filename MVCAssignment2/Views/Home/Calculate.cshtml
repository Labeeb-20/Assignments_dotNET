@model MVCAssignment2.Models.RentCalculator

@{
    ViewData["Title"] = "Calculate";
}


<div>
    
    <h2 style="color:blue">@ViewBag.Name</h2>
    <br />
    <dl class="row">
        <dt class = "col-sm-2">
            Owner
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Owner
        </dd>
        <dt class = "col-sm-2">
            Cost Per Day
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.cost
        </dd>
        <dt class = "col-sm-12">
           Renting from @ViewBag.start to @ViewBag.end
        </dt>
        <dt class="col-sm-2">
            Total Cost
        </dt>
        <dd class="col-sm-10" style="color:blue">
            @ViewBag.totalCost
        </dd>
    </dl>
</div>

